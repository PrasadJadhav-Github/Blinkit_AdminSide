<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2.6dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvproduct1"
        android:layout_width="0dp"
        android:layout_height="286dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_stroke"
        android:backgroundTint="@color/white"
        android:elevation="0dp"
        app:cardCornerRadius="13dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="286dp"
            android:background="@drawable/bg_stroke"
            android:backgroundTint="@color/white"
            android:elevation="0dp"
            app:cardCornerRadius="13dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:orientation="vertical">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/ivImageSlider1"
                    android:layout_width="wrap_content"
                    android:layout_height="156dp"
                    android:background="#DDDDDD"
                    app:iss_auto_cycle="false"
                    app:iss_text_align="CENTER" />

                <TextView
                    android:id="@+id/textviewProductTitle1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#DDDDDD"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textviewProductQuantity1"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="#DDDDDD"
                    android:textColor="#6F6F6F"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textviewProductPrice1"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:background="#DDDDDD"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textviewAdd1"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5.2dp"
                            android:background="@drawable/button_baground"
                            android:gravity="center"
                            android:padding="5.2dp"
                            android:text="Edit"
                            android:textColor="@color/green"
                            android:textSize="14.3sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProduct"
        android:layout_width="0dp"
        android:layout_height="286dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/bg_stroke"
        android:backgroundTint="@color/white"
        android:elevation="0dp"
        app:cardCornerRadius="13dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewProduct2"
            android:layout_width="match_parent"
            android:layout_height="286dp"
            android:background="@drawable/bg_stroke"
            android:backgroundTint="@color/white"
            android:elevation="0dp"
            app:cardCornerRadius="13dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:orientation="vertical">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/ivImageSlider"
                    android:layout_width="wrap_content"
                    android:layout_height="156dp"
                    android:background="#DDDDDD"
                    app:iss_auto_cycle="false"
                    app:iss_text_align="CENTER" />

                <TextView
                    android:id="@+id/textviewProductTitle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#DDDDDD"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textviewProductQuantity"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="#DDDDDD"
                    android:textColor="#6F6F6F"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textviewProductPrice"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:background="#DDDDDD"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textviewAdd"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5.2dp"
                            android:background="@drawable/button_baground"
                            android:gravity="center"
                            android:padding="5.2dp"
                            android:text="Edit"
                            android:textColor="@color/green"
                            android:textSize="14.3sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
